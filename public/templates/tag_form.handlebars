<div class='view' id='contact'>
  <h2>New Tag</h2>
  <hr />
  <form id='tag-form' class='container'>
    <div class='mb-3'>
      <label for='name' class='form-label'>Tag Name</label>
      <input type='text' class='form-control' name='name' id='name' />
    </div>
    <div class='d-flex'>
      <div class='col-6'>
        <div class='d-grid p-2'>
          <button type='submit' class='btn btn-lg btn-outline-primary'>
            Submit
          </button>
        </div>
      </div>
      <div class='col-6'>
        <div class='d-grid p-2'>
          <button
            type='button'
            class='view-switcher btn btn-lg btn-outline-primary'
            data-view='home'
          >Cancel</button>
        </div>
      </div>
    </div>
  </form>
</div>